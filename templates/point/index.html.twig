{% extends 'base.html.twig' %}

{% block title %}Point index{% endblock %}

{% block body %}
    <h1>Point index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Type</th>
                <th>Layouts</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for point in points %}
            <tr>
                <td>{{ point.id }}</td>
                <td>{{ point.latitude }}</td>
                <td>{{ point.longitude }}</td>
                <td>{{ point.type }}</td>
                <td>{{ point.layouts|join(', ') }}</td>
                <td>
                    <a href="{{ path('point_show', {'id': point.id}) }}">show</a>
                    <a href="{{ path('point_edit', {'id': point.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('point_new') }}">Create new</a>
{% endblock %}
